---
import { Image } from "astro:assets";
import heroImage from "../assets/hero.webp";
import Mouse from "../icons/Mouse.astro";
import ArrowDown from "../icons/ArrowDown.astro";
import heroVideo from "../assets/hero-video.mp4";
---

<div
  class="relative h-[100dvh] w-full overflow-hidden flex flex-col justify-center items-center bg-white"
>
  <!-- Texto -->
  <div class="flex items-start justify-between">
    <div
      class="relative z-20 text-neutral-900 text-[2.6em] md:text-[4em] 3xl:text-[8em] leading-[1em] flex flex-col justify-center h-screen"
    >
      <div class="hero-texts-container font-semibold text-white text-center text-balance">
        <p class="hero-text-split flex items-center justify-center gap-4">
          Compra en linea, recibelo 
        </p>
        <p class="hero-text-split text-white">
          en Honduras con <span class="text-[#44ccd6] levitating">Intelliship.</span>
        </p>
      </div>

      <div class="flex flex-col items-center mt-2">
        <p
          class="hero-text-split text-white text-base md:text-lg font-light mt-4 text-center px-8"
        >
          La mejor manera de importar productos a Honduras.
        </p>
        <a
          href="https://sacalogistics.managercargo.com/public/web/webindex/registrocas/form/1?ag=1"
          target="_blank"
          class="flex gap-2 hover:scale-105 transition duration-500 bg-[#01bac0] rounded-full shadow-sm items-center justify-center text-white text-base md:text-lg px-6 p-2 mt-6 cursor-pointer z-20 hero-button"
        >
          <span class="font-medium">Crear mi casillero</span>
          <ArrowDown />
        </a>
      </div>
    </div>
  </div>

  <!-- Imagen de fondo -->
  <div class="absolute inset-0 z-10 overflow-hidden">
    <!-- <Image
      src={heroImage}
      alt="Background"
      width="1920"
      height="1080"
      class="absolute top-0 left-0 w-screen h-screen object-cover opacity-80"
      loading="lazy"
    /> -->
    <video
      autoplay
      loop
      muted
      playsinline
      class="absolute top-0 left-0 w-screen h-screen object-cover opacity-80"
    >
      <source src={heroVideo} type="video/mp4" />
      Your browser does not support the video tag.
    </video>
    <div class="absolute inset-0 bg-black/70"></div>
  </div>

  <!-- Scroll indicator -->
  <div
    class="absolute bottom-0 left-0 mt-32 p-10 flex justify-center w-full z-10 md:pr-8"
  >
    <div
      class="flex flex-col items-center justify-center mt-4 gap-4 text-neutral-200 w-full max-w-4xl mx-auto"
    >
      <Mouse />
    </div>
  </div>
</div>

<script>
  import { gsap } from "gsap";
  import { SplitText } from "gsap/SplitText";
  gsap.registerPlugin(SplitText);
  const heroButton = document.querySelectorAll(
    ".hero-button"
  ) as NodeListOf<HTMLElement>;
  const splitText = new SplitText(".hero-text-split", {
    type: "lines, words, chars",
  });
  const chars = splitText.words;

  const tl = gsap.timeline({});
  tl.delay(2.5);
  tl.from(
    chars,
    {
      duration: 0.6,
      opacity: 0,
      y: 40,
      stagger: 0.1,
      ease: "power3.out",
    },
    "<"
  );
  heroButton.forEach((button) => {
    tl.fromTo(
      button,
      {
        duration: 1,
        opacity: 0,
        ease: "power2.Out",
      },
      {
        duration: 1,
        opacity: 1,
        ease: "power2.Out",
      },
      "<"
    );
  });
</script>
