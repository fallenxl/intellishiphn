---
import { Image } from "astro:assets";
import heroImage from "../assets/hero.webp";
import Mouse from "../icons/Mouse.astro";
import ArrowDown from "../icons/ArrowDown.astro";

---
<div
  class="relative h-[100dvh] w-full overflow-hidden flex flex-col justify-center items-center bg-white"
>
  <!-- Texto -->
  <div class="flex items-start justify-between">
    <div
      class="relative z-20 text-neutral-900 text-[2.6em] md:text-[4.5em]  3xl:text-[8em] leading-[1em] flex flex-col justify-center h-screen"
    >
      <div class="hero-texts-container font-semibold text-white text-center">
        <p class="hero-text-split flex items-center justify-center gap-4">
          Pedidos seguros,
        </p>
        <p class="hero-text-split text-white">
          al <span class="text-[#44ccd6]">instante.</span>
        </p>
      </div>

      <div class="flex flex-col items-center mt-2">
        <p
          class="hero-text-split text-white text-base md:text-lg font-light mt-4 text-center px-8"
        >
          La mejor manera de importar productos a Honduras.
      </p>
        <a
          href="https://sacalogistics.managercargo.com/public/web/webindex/registrocas/form/1?ag=1"
          target="_blank"
          class="flex gap-2 hover:scale-105 transition duration-500 bg-[#01bac0] rounded-full shadow-sm items-center justify-center text-white text-base md:text-lg px-6 p-2 mt-6 cursor-pointer z-20 hero-button"
        >
          <span class="font-medium">Obtener mi casillero</span>
          <ArrowDown/>
          <!-- <GoArrowRight class="ml-2" size="20" /> -->
        </a>
      </div>
    </div>
  </div>

  <!-- Imagen de fondo -->
  <div class="absolute inset-0 z-10 overflow-hidden">
    <Image
      src={heroImage}
      alt="Background"
      width="1920"
      height="1080"
      class="absolute top-0 left-0 w-screen h-screen object-cover opacity-80"
      loading="eager"
    />
    <div class="absolute inset-0 bg-black/55"></div>
  </div>

  <!-- Scroll indicator -->
  <div
    class="absolute bottom-0 left-0 mt-32 p-10 flex justify-center w-full z-10 md:pr-8"
  >
    <div
      class="flex flex-col items-center justify-center mt-4 gap-4 text-neutral-200 w-full max-w-4xl mx-auto"
    >
      <Mouse />
    </div>
  </div>
</div>


