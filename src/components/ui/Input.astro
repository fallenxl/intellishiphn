---
import type { JSX } from "astro/jsx-runtime";

interface InputProps {
  id: string;
  label: string;
  name: string;
  type?: string;
  value?: string | number;
  min?: number;
  max?: number;
  step?: number;
  required?: boolean;
  placeholder?: string;
  class?: string;
}

const {
  id,
  label,
  name,
  type = "text",
  value = "",
  min,
  max,
  step,
  required = false,
  placeholder = " ",
  class: customClass = "",
} = Astro.props as InputProps;
---

<div class="relative w-full flex flex-col gap-2">
  <label
    for={id}
    class=""
  >
    {label}
  </label>
  <input
    id={id}
    name={name}
    type={type as JSX.IntrinsicElements["input"]["type"]}
    value={value}
    min={min}
    max={max}
    step={step}
    required={required}
    placeholder={placeholder}
    class={`border border-neutral-300 rounded-lg ${customClass}`}
  />
</div>
