---
import Facebook from "../icons/Facebook.astro";
import Instagram from "../icons/Instagram.astro";
import Logo from "../icons/Logo.astro";
import Whatsapp from "../icons/Whatsapp.astro";
const { screen = false } = Astro.props;
---

<footer class="">
  <div
    class={`mx-auto text-center bg-neutral-50 border border-neutral-200 text-neutral-500 w-full h-full  px-6 md:px-10 py-10 rounded-t-2xl  flex flex-col items-center justify-center gap-5 ${screen ? "w-screen" : "max-w-screen-xl"} z-20 relative`}
  >
    <div
      class="flex flex-col md:flex-row items-start justify-between w-full gap-10"
    >
      <div
        class="flex flex-col items-center md:items-start justify-start gap-4 md:w-2/5"
      >
        <div class="flex items-center gap-2 text-2xl font-bold">
          <Logo size={30} />
          <h1>Intelliship</h1>
        </div>
        <div class="flex items-center gap-5 md:ml-5">
          <a href={"https://www.facebook.com/intellishiphn"} target="_blank" class="text-sm" aria-label="Facebook">
            <Facebook />
          </a>
          <a href={"https://www.instagram.com/intellishiphn/"} target="_blank" class="text-sm" aria-label="Instagram">
             <Instagram />
          </a>
          <a href={"https://api.whatsapp.com/send/?phone=50431746523&text&type=phone_number&app_absent=0"} target="_blank" class="text-sm" aria-label="Whatsapp">
            <Whatsapp />
          </a>
        </div>
      </div>
      <div
        class="flex flex-col md:flex-row items-start md:justify-around gap-10 md:w-3/5"
      >
        <div
          class="flex flex-col items-start justify-start gap-2 w-full md:w-1/3 text-left"
        >
          <h3 class="text-lg font-bold">Enlaces</h3>
          <a href={"/"} class=""> Inicio </a>
          <a href={"/#services"} class=""> Servicios </a>
          <a href={"/cotizador"} class=""> Cotizador </a>
          <a
            href={"https://sacalogistics.managercargo.com/public/indexlogin/logincasillero"}
            target="_blank"
          >
            Iniciar sesión
          </a>
          <a
            href={"https://sacalogistics.managercargo.com/public/web/webindex/registrocas/form/1?ag=1"}
            target="_blank "
          >
            Registrarme
          </a>
        </div>
        <div
          class="flex flex-col items-start justify-start gap-2 w-full md:w-1/3 text-left"
        >
          <h3 class="text-lg font-bold">Horarios de atención</h3>
          <p class="text-sm">Lunes a Viernes <br /> 8:00 AM - 5:00 PM</p>
          <p class="text-sm">Sábados <br /> 8:00 AM - 12:00 PM</p>
          <p class="text-sm">Domingos <br /> Cerrado</p>
        </div>
        <div
          class="flex flex-col items-start justify-start gap-2 w-full md:w-1/3 text-left"
        >
          <h3 class="text-lg font-bold">Contáctanos</h3>
          <p class="text-sm">+504 3174-6523</p>
          <p class="text-sm">info@intellishiphn.com</p>

          <h3 class="font-bold text-lg">Ubicación</h3>
          <a
            class="text-sm text-left flex"
            href={"https://www.google.com/maps/place/14%C2%B004'44.1%22N+87%C2%B010'16.8%22W/@14.078917,-87.171333,14z/data=!4m4!3m3!8m2!3d14.0789167!4d-87.1713333?hl=es-ES"}
            target="_blank"
          >
            Col. 21 de Octubre Zona el Rincón, Complejo Induma Bodega #7
          </a>
          <a
            class="text-sm text-left capitalize flex items-start gap-2"
            href={"https://www.google.com/maps/place/14%C2%B004'44.1%22N+87%C2%B010'16.8%22W/@14.078917,-87.171333,14z/data=!4m4!3m3!8m2!3d14.0789167!4d-87.1713333?hl=es-ES"}
            target="_blank"
          >
            3541 NW 82 Ave. - Doral, FL 33122
          </a>
        </div>
      </div>
    </div>
    <div
      class="flex flex-col md:flex-row items-center justify-between gap-4 w-full mt-10"
    >
      <a href={"/terminos-y-condiciones"} class="text-sm" aria-label="Términos y condiciones">
        Términos y condiciones
      </a>
      <p class="text-sm">
        &copy; 2025 Intelliship. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>
